<div class="container">
  <div>
    <%= pie_chart amount_by_category_sales_path, download: {filename: "amount_by_category_sales"}, title: "Amount by category"  %>
  </div>

  <div>
    <%= column_chart this_month_daily_sales_path, download: {filename: "this_month_daily_sales"},  title: "Current month daily sales" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Sale Date</th>
        <th scope="col">Amount</th>
        <th scope="col">Product Category</th>
      </tr>
    </thead>
    <tbody>
      <% @sales.each do |sale| %>
          <th scope="row"><%= sale.id %></th>
          <td><%= sale.sale_date %></td>
          <td><%= sale.amount %></td>
          <td><%= sale.product_category %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
